{
  "name": "mypal-launcher",
  "version": "0.1.1",
  "description": "Desktop launcher that boots the MyPal backend and shows the SPA in a dedicated window.",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder --win --x64"
  },
  "dependencies": {
    "electron": "^30.0.4",
    "tree-kill": "^1.2.2",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.mypal.launcher",
    "productName": "MyPal Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "../app",
        "to": "app"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "../app/media/images/icon.ico",
      "artifactName": "MyPal-Launcher-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "MyPal"
    }
  }
}
