<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MyPal.Desktop.ViewModels"
             mc:Ignorable="d"
             x:Class="MyPal.Desktop.Views.SettingsView"
             x:DataType="vm:AppShellViewModel+PlaceholderViewModel">
    <Grid RowDefinitions="Auto,*" RowSpacing="24">
        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <Border Width="40" Height="40" CornerRadius="14" Background="#262f4f" BorderBrush="#38466d" BorderThickness="1">
                <TextBlock Text="&#xE713;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="20"
                           Foreground="{StaticResource Brush.Accent.Cyan}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <StackPanel Spacing="4">
                <TextBlock Text="Settings"
                           FontSize="22"
                           FontWeight="400"
                           Foreground="{StaticResource Brush.Text.Primary}"/>
                <TextBlock Text="{Binding Message}"
                           FontSize="13"
                           Foreground="{StaticResource Brush.Text.Tertiary}"/>
            </StackPanel>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="2" Rows="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
            <Border CornerRadius="24" Background="#1f2541" BorderBrush="#30385c" BorderThickness="1.5" Padding="24" Margin="0,0,18,18">
                <StackPanel Spacing="12">
                    <TextBlock Text="Appearance"
                               FontSize="17"
                               Foreground="{StaticResource Brush.Text.Primary}"/>
                    <TextBlock Text="Switch between neon palettes, customize glow intensity, and fine tune glass transparency across the UI."
                               FontSize="13"
                               Foreground="{StaticResource Brush.Text.Tertiary}"/>
                    <Border Background="#262f4f" CornerRadius="16" Padding="16" BorderBrush="#3a4666" BorderThickness="1">
                        <StackPanel Spacing="10">
                            <ToggleSwitch Content="Enable adaptive neon" IsChecked="True"/>
                            <Slider Minimum="0" Maximum="100" Value="75"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <Border CornerRadius="24" Background="#1f2541" BorderBrush="#30385c" BorderThickness="1.5" Padding="24" Margin="18,0,0,18">
                <StackPanel Spacing="12">
                    <TextBlock Text="Profiles"
                               FontSize="17"
                               Foreground="{StaticResource Brush.Text.Primary}"/>
                    <TextBlock Text="Manage cognitive profiles, transfer memories, and adjust developmental pacing per persona."
                               FontSize="13"
                               Foreground="{StaticResource Brush.Text.Tertiary}"/>
                    <Border Background="#262f4f" CornerRadius="16" Padding="16" BorderBrush="#3a4666" BorderThickness="1">
                        <StackPanel Spacing="12">
                            <Button Content="Open profile manager"/>
                            <TextBlock Text="Autosync ready" FontSize="12" Foreground="#66e3ff"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <Border CornerRadius="24" Background="#1f2541" BorderBrush="#30385c" BorderThickness="1.5" Padding="24" Margin="0,18,18,0">
                <StackPanel Spacing="12">
                    <TextBlock Text="Connections"
                               FontSize="17"
                               Foreground="{StaticResource Brush.Text.Primary}"/>
                    <TextBlock Text="Configure backend endpoints, WebSocket security, and offline-first synchronization preferences."
                               FontSize="13"
                               Foreground="{StaticResource Brush.Text.Tertiary}"/>
                    <Border Background="#262f4f" CornerRadius="16" Padding="16" BorderBrush="#3a4666" BorderThickness="1">
                        <StackPanel Spacing="12">
                            <ToggleSwitch Content="Auto-start backend" IsChecked="True"/>
                            <ToggleSwitch Content="Enable secure channel"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <Border CornerRadius="24" Background="#1f2541" BorderBrush="#30385c" BorderThickness="1.5" Padding="24" Margin="18,18,0,0">
                <StackPanel Spacing="12">
                    <TextBlock Text="Diagnostics"
                               FontSize="17"
                               Foreground="{StaticResource Brush.Text.Primary}"/>
                    <TextBlock Text="Review AI performance metrics, memory usage, and backend logs with export tools for support."
                               FontSize="13"
                               Foreground="{StaticResource Brush.Text.Tertiary}"/>
                    <Border Background="#262f4f" CornerRadius="16" Padding="16" BorderBrush="#3a4666" BorderThickness="1">
                        <StackPanel Spacing="10">
                            <Button Content="Open diagnostics panel"/>
                            <TextBlock Text="Last export 4m ago" FontSize="12" Foreground="#66e3ff"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</UserControl>
