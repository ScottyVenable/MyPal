<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:MyPal.Desktop.ViewModels"
        mc:Ignorable="d"
        d:DesignWidth="1280"
        d:DesignHeight="800"
        x:Class="MyPal.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Width="1280"
        Height="820"
        MinWidth="1120"
        MinHeight="720"
        Title="MyPal">

    <Grid RowDefinitions="*,Auto">
        <Border Background="{StaticResource Brush.Background.Deep}">
            <Border Background="{StaticResource Brush.Background.Primary}">
                <Border Background="{StaticResource Brush.Background.Secondary}"
                        CornerRadius="36"
                        Margin="24"
                        BorderBrush="#332e3451"
                        BorderThickness="1.5">
                    <ContentControl Content="{Binding CurrentViewModel}"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Stretch"/>
                </Border>
            </Border>
        </Border>

        <Border Grid.Row="1"
                Background="#141a2c"
                BorderBrush="#332e3451"
                BorderThickness="1,1,1,0"
                Padding="16,10"
                IsVisible="{Binding StatusMessage, Converter={StaticResource NullToBooleanConverter}}">
            <TextBlock Text="{Binding StatusMessage}"
                       Foreground="{StaticResource Brush.Text.Tertiary}"
                       FontSize="12"
                       TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>
