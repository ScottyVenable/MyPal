<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MyPal.Desktop.ViewModels"
             mc:Ignorable="d"
             x:Class="MyPal.Desktop.Views.StatsView"
             x:DataType="vm:AppShellViewModel+PlaceholderViewModel">
    <Grid RowDefinitions="Auto,*" RowSpacing="24">
        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
            <Border Width="46" Height="46" CornerRadius="18" Background="#262f4f" BorderBrush="#39456d" BorderThickness="1">
                <TextBlock Text="&#xE943;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="20"
                           Foreground="{StaticResource Brush.Accent.Cyan}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <StackPanel Spacing="4">
                <TextBlock Text="Nexus dashboard" FontSize="22" FontWeight="400" Foreground="{StaticResource Brush.Text.Primary}"/>
                <TextBlock Text="{Binding Message}" FontSize="13" Foreground="{StaticResource Brush.Text.Tertiary}"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" RowDefinitions="Auto,Auto" RowSpacing="24">
            <Grid ColumnDefinitions="320,*,280" ColumnSpacing="24">
                <!-- Stats card -->
                <Border CornerRadius="28"
                        Background="#202742dd"
                        BorderBrush="#333d62"
                        BorderThickness="1.5"
                        Padding="28"
                        BoxShadow="0 26 84 0 #05081460">
                    <StackPanel Spacing="20">
                        <StackPanel Spacing="6">
                            <TextBlock Text="NEXUS" FontSize="20" FontWeight="400" Foreground="{StaticResource Brush.Text.Primary}"/>
                            <TextBlock Text="Developmental Stage: Evolving"
                                       FontSize="13"
                                       Foreground="{StaticResource Brush.Text.Tertiary}"/>
                        </StackPanel>
                        <Border CornerRadius="20" Background="#1b213d" BorderBrush="#2f3658" BorderThickness="1" Padding="20">
                            <StackPanel Spacing="16">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="12">
                                    <StackPanel Width="120" Spacing="6">
                                        <TextBlock Text="Level" FontSize="12" Foreground="#7a84c7"/>
                                        <TextBlock Text="8" FontSize="28" FontWeight="300" Foreground="#a78bfa"/>
                                        <TextBlock Text="XP 2300/5000" FontSize="12" Foreground="#7a84c7"/>
                                        <ProgressBar Height="6" Minimum="0" Maximum="100" Value="46" Foreground="#66e3ff" Background="#1a243e" CornerRadius="3"/>
                                    </StackPanel>
                                    <StackPanel Spacing="6">
                                        <TextBlock Text="CP" FontSize="12" Foreground="#7a84c7"/>
                                        <TextBlock Text="980" FontSize="26" FontWeight="300" Foreground="#66e3ff"/>
                                        <TextBlock Text="Vocab 5100 words" FontSize="12" Foreground="#7a84c7"/>
                                    </StackPanel>
                                </StackPanel>
                                <Grid Height="140" Margin="0,4,0,0">
                                    <Grid.Resources>
                                        <Style Selector="Ellipse.radar">
                                            <Setter Property="Stroke" Value="#2f3c63"/>
                                            <Setter Property="StrokeThickness" Value="1"/>
                                        </Style>
                                    </Grid.Resources>
                                    <Ellipse Classes="radar" Width="140" Height="140" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Ellipse Classes="radar" Width="110" Height="110" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7"/>
                                    <Ellipse Classes="radar" Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.4"/>
                                    <Polyline Points="70,10 120,52 100,90 40,100 25,40" Stroke="#66e3ff" StrokeThickness="2" Fill="#332ed6ff"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <Button Classes="accent" Content="+75 XP surge" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Visual core -->
                <Border Grid.Column="1"
                        CornerRadius="32"
                        Background="#141a32"
                        BorderBrush="#2c3656"
                        BorderThickness="1.5"
                        Padding="28"
                        BoxShadow="0 32 120 0 #060a1a70">
                    <Grid>
                        <TextBlock Text="Neural resonance map"
                                   FontSize="16"
                                   Foreground="#8b92c1"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"/>
                        <Canvas Margin="0,20,0,0">
                            <Ellipse Width="60" Height="60" Canvas.Left="260" Canvas.Top="42" Fill="#ff6f9180" Stroke="#ff6f91" StrokeThickness="1.5"/>
                            <Ellipse Width="90" Height="90" Canvas.Left="180" Canvas.Top="120" Fill="#66e3ff40" Stroke="#66e3ff" StrokeThickness="1.3"/>
                            <Ellipse Width="110" Height="110" Canvas.Left="80" Canvas.Top="60" Fill="#a78bfa33" Stroke="#a78bfa" StrokeThickness="1.5"/>
                            <Ellipse Width="40" Height="40" Canvas.Left="360" Canvas.Top="180" Fill="#a78bfa88" Stroke="#a78bfa" StrokeThickness="1"/>
                            <Ellipse Width="26" Height="26" Canvas.Left="140" Canvas.Top="220" Fill="#ff6f91" Stroke="#ff6f91" StrokeThickness="1"/>
                            <Ellipse Width="18" Height="18" Canvas.Left="320" Canvas.Top="90" Fill="#66e3ff" Stroke="#66e3ff" StrokeThickness="1"/>
                            <Polyline Points="135,230 210,165 270,85 338,100 383,200" Stroke="#66e3ff" StrokeThickness="1.2" StrokeDashArray="4,6"/>
                            <Polyline Points="140,230 105,120 200,80 320,92" Stroke="#ff6f91" StrokeThickness="1.3"/>
                            <Polyline Points="210,165 182,98 103,150" Stroke="#a78bfa" StrokeThickness="1.1" StrokeDashArray="3,4"/>
                        </Canvas>
                        <Border CornerRadius="16"
                                Background="#1f2644dd"
                                BorderBrush="#313a5f"
                                BorderThickness="1"
                                Padding="18"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0,0,6,6">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Activity peak: NLP / 125 nodes" FontSize="13" Foreground="#66e3ff"/>
                                <TextBlock Text="Last pulse 48s ago" FontSize="12" Foreground="#8b92c1"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Control panel -->
                <Border Grid.Column="2"
                        CornerRadius="28"
                        Background="#1b213d"
                        BorderBrush="#2f3658"
                        BorderThickness="1.5"
                        Padding="28"
                        BoxShadow="0 24 90 0 #05091860">
                    <StackPanel Spacing="18">
                        <TextBlock Text="Control &amp; Filter" FontSize="18" Foreground="{StaticResource Brush.Text.Primary}"/>
                        <StackPanel Spacing="12">
                            <TextBlock Text="Node Type" FontSize="12" Foreground="#7a84c7"/>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <ToggleButton Content="Memory" Width="100" Classes="outline"/>
                                <ToggleButton Content="Concept" Width="100" IsChecked="True" Classes="accent"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Spacing="12">
                            <TextBlock Text="Activity Window" FontSize="12" Foreground="#7a84c7"/>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <ToggleButton Content="Last Minute" Width="110" Classes="ghost"/>
                                <ToggleButton Content="Hour" Width="90" IsChecked="True" Classes="outline"/>
                                <ToggleButton Content="All Time" Width="90" Classes="ghost"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Spacing="8">
                            <TextBlock Text="Intensity threshold" FontSize="12" Foreground="#7a84c7"/>
                            <Slider Minimum="0" Maximum="100" Value="30"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <TextBlock Text="Visual Mode" FontSize="12" Foreground="#7a84c7" VerticalAlignment="Center"/>
                            <TextBlock Text="000" FontSize="16" Foreground="{StaticResource Brush.Text.Primary}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <ToggleSwitch Content="Particle" IsChecked="True"/>
                            <ToggleSwitch Content="Solid"/>
                        </StackPanel>
                        <Separator Margin="0,4" Background="#2b3459" Height="1"/>
                        <Button Content="Export" Classes="accent" HorizontalAlignment="Stretch"/>
                        <TextBlock Text="PNG / GLTF / JSON" FontSize="12" HorizontalAlignment="Center" Foreground="#7a84c7"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="24">
                <Border CornerRadius="24" Background="#1b2038" BorderBrush="#2b3353" BorderThickness="1.5" Padding="20">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                        <Border Width="120" Height="140" CornerRadius="18" Background="#12162c">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="14">
                                <Ellipse Width="60" Height="60" Fill="#ff6f9140" Stroke="#ff6f91" StrokeThickness="1"/>
                                <TextBlock Text="Mobile View" FontSize="12" Foreground="#7a84c7" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <StackPanel Spacing="10">
                            <TextBlock Text="Fallback &amp; Responsiveness" FontSize="16" Foreground="{StaticResource Brush.Text.Primary}"/>
                            <TextBlock Text="Low-power fallback renders SVG/CANVAS network with animated pulses across devices." FontSize="13" Foreground="{StaticResource Brush.Text.Tertiary}"/>
                            <WrapPanel Spacing="8">
                                <Border Padding="8,4" CornerRadius="12" Background="#21294a" BorderBrush="#323d63" BorderThickness="1">
                                    <TextBlock Text="SVG" FontSize="12" Foreground="#66e3ff"/>
                                </Border>
                                <Border Padding="8,4" CornerRadius="12" Background="#21294a" BorderBrush="#323d63" BorderThickness="1">
                                    <TextBlock Text="Canvas2D" FontSize="12" Foreground="#66e3ff"/>
                                </Border>
                                <Border Padding="8,4" CornerRadius="12" Background="#21294a" BorderBrush="#323d63" BorderThickness="1">
                                    <TextBlock Text="WebGL" FontSize="12" Foreground="#66e3ff"/>
                                </Border>
                            </WrapPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Column="1" CornerRadius="24" Background="#1b2038" BorderBrush="#2b3353" BorderThickness="1.5" Padding="24">
                    <Grid RowDefinitions="Auto,*" RowSpacing="14">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="SpaceBetween">
                            <TextBlock Text="Label: Algorithmic Reasoning" FontSize="16" FontWeight="400" Foreground="{StaticResource Brush.Text.Primary}"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="Reinforce" Classes="accent" Padding="12,8"/>
                                <Button Content="Amputate" Classes="ghost" Padding="12,8"/>
                            </StackPanel>
                        </StackPanel>
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="18">
                            <StackPanel Spacing="10">
                                <TextBlock Text="Tags: NLP, AI Communication" FontSize="13" Foreground="#8b92c1"/>
                                <TextBlock Text="First seen: 2025-11-01" FontSize="13" Foreground="#8b92c1"/>
                                <TextBlock Text="Reinforcement count: 280" FontSize="13" Foreground="#8b92c1"/>
                                <StackPanel Spacing="6">
                                    <TextBlock Text="Sample utterances" FontSize="12" Foreground="#7a84c7"/>
                                    <Border Padding="12" CornerRadius="14" Background="#202742" BorderBrush="#2f3658" BorderThickness="1">
                                        <TextBlock Text="\"How does dual language processing work?\"" FontSize="12" Foreground="#d4d7f0"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <Border CornerRadius="18" Background="#161b33" BorderBrush="#2f3b60" BorderThickness="1" Padding="16">
                                <StackPanel Spacing="8" HorizontalAlignment="Center">
                                    <Ellipse Width="68" Height="68" Fill="#66e3ff33" Stroke="#66e3ff" StrokeThickness="1.3"/>
                                    <TextBlock Text="Visual Mode: Particle" FontSize="12" Foreground="#8b92c1" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
