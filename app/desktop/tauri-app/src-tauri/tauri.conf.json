{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MyPal",
  "version": "0.3.0",
  "identifier": "com.mypal.app",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../../../frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MyPal",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "decorations": true,
        "devtools": true
      }
    ],
    "security": {
      "assetProtocol": {
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "appimage", "dmg"],
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
